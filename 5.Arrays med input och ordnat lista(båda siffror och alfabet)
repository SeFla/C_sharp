// lätt lista(array) med ordning siffror

using System;

class Program

{
    static void Main(string[] args)
    {

        Console.Title = "skynet";
        Console.ForegroundColor = ConsoleColor.DarkGreen;

        string[] movies = { "Unbroken", "The worlds news", "powerBuffGirls", "The platform" };

        for (int i = 0; i < movies.Length; i++)
        {
            int rank = i + 1;
            Console.WriteLine(rank+". " + movies[i]);
        }

        
    }

}
____________________________________________________________________________________________________________________
// med använing till input skaper vi lista med alabet ordning

using System;

class Program

{
    static void Main(string[] args)
    {

        string[] movies = new string[4];
        
        Console.WriteLine("type in four movies: ");

        for (int i = 0; i < movies.Length; i++)
        {
            movies[i] = Console.ReadLine();
        }

        Console.WriteLine("\nHere they are alphabettically:\n ");
        
        Array.Sort(movies);

        for (int i = 0; i < movies.Length; i++)
        {
            Console.WriteLine(movies[i]);
        }

        Console.ReadKey();

    }   

}
