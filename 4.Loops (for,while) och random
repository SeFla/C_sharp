// for loop till 10
using System;

class Program

{
    static void Main(string[] args)
    {

        Console.Title = "skynet";
        Console.ForegroundColor = ConsoleColor.DarkGreen;

        for (int i = 1; i  < 10; i++)
        {
            Console.Write(i + 1);
        }

        Console.ReadKey();

    }
